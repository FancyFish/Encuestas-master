<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encuestas.DetallesEncuestasView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout>
            <Label Text="Nombre"></Label>
            <Entry x:Name ="EntNombre" Placeholder="Ingrese su nombre"></Entry>
            <Label Text="Fecha de nacimiento"></Label>
            <DatePicker x:Name ="DtNacim"></DatePicker>
            <Label Text="Equipo favorito"></Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label x:Name="LbEquipoFav"></Label>
                <Button x:Name="BtnAgregarEqu"
                        Grid.Column="1"
                        Text="..."></Button>
            </Grid>
        </StackLayout>
        <Button Grid.Row="1"
                x:Name="BtnAceptar"
                Text="Aceptar"></Button>
    </Grid>
</ContentPage>